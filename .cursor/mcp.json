{
  "mcpServers": {
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "-e",
        "GITHUB_TOOLSETS=all",
        "--env-file",
        "${HOME}/.cursor/secrets/.env",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {}
    }
  }
} 